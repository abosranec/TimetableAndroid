<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <TextView
            android:text="@string/route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/route"
            android:textSize="24sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0" android:background="?attr/colorButtonNormal"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0"
                  android:orientation="horizontal">
        <TextView
                android:text="@string/textStart"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@+id/textStart"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_weight="0"/>
        <AutoCompleteTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint=""
                android:ems="20"
                android:textAlignment="center"
                android:id="@+id/start"
                android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageDeleteStart"
                android:paddingTop="5dp"
                android:src = "@mipmap/ic_clear_black_24dp"
                android:layout_weight="0"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageStart"
                android:padding="5dp"
                android:src = "@mipmap/ic_arrow_drop_down_black_24dp"
                android:layout_weight="0"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0"
                  android:orientation="horizontal">
        <TextView
                android:text="@string/textEnd"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@+id/textEnd"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_weight="0"/>
        <AutoCompleteTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint=""
                android:ems="20"
                android:textAlignment="center"
                android:id="@+id/end"
                android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageDeleteEnd"
                android:paddingTop="5dp"
                android:src = "@mipmap/ic_clear_black_24dp"
                android:layout_weight="0"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageEnd"
                android:padding="5dp"
                android:src = "@mipmap/ic_arrow_drop_down_black_24dp"
                android:layout_weight="0"/>
    </LinearLayout>
    <Button
            android:text="@string/find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/findRoute"
            android:onClick="findRoute"
            android:layout_weight="0"
            android:textSize="20sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">
        <TextView
                android:text="Из"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/headStart"
                android:layout_weight="0.333"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textSize="18sp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"/>
        <TextView
                android:text="В"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/headEnd"
                android:layout_weight="0.333"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textSize="18sp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"/>
        <TextView
                android:text="№ авт"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/headNumber"
                android:layout_weight="0.333"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textSize="18sp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"/>
    </LinearLayout>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            android:layout_weight="1"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimaryDark"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0"
                  android:orientation="horizontal">
        <ToggleButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/toggleWeekdays"
                android:layout_weight="1"
                android:textOn="@string/switchWeekdays"
                android:textOff="@string/switchWeekdays"
                android:textSize="18sp"/>
        <ToggleButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/toggleHolidays"
                android:layout_weight="1"
                android:textOn="@string/switchHolidays"
                android:textOff="@string/switchHolidays"
                android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>