<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:orientation="vertical">
    <TextView
            android:text="@string/route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/route"
            android:textSize="24sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="1"
                  android:orientation="horizontal">
        <TextView
                android:text="@string/textStart"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:id="@+id/textStart"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textStyle="normal|bold"
                android:textAlignment="center"/>
        <AutoCompleteTextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint=""
                android:ems="20"
                android:textAlignment="center"
                android:id="@+id/start"/>
        <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageStart"
                android:padding="5dp"
                android:src = "@mipmap/ic_arrow_drop_down_black_24dp"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="1"
                  android:orientation="horizontal">
        <TextView
                android:text="@string/textEnd"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:id="@+id/textEnd"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textStyle="normal|bold"
                android:textAlignment="center"/>
        <AutoCompleteTextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint=""
                android:ems="20"
                android:textAlignment="center"
                android:id="@+id/end"/>
        <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageEnd"
                android:padding="5dp"
                android:src = "@mipmap/ic_arrow_drop_down_black_24dp"/>
    </LinearLayout>
    <Button
            android:text="@string/find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/findRoute"
            android:onClick="findRoute"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/result"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="1"
                  android:orientation="horizontal">
        <ToggleButton
                android:text="ToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toggleWeekdays"
                android:layout_weight="0.5"
                android:textOn="@string/switchWeekdays"
                android:textOff="@string/switchWeekdays"
                android:textSize="22sp"/>
        <ToggleButton
                android:text="ToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toggleHolidays"
                android:layout_weight="0.5"
                android:textOn="@string/switchHolidays"
                android:textOff="@string/switchHolidays"
                android:textSize="22sp"/>
    </LinearLayout>
</LinearLayout>